{
  "name": "hmgetinfo",
  "version": "0.0.1",
  "description": "Collect paramsets and paramsetDescriptions from your Homematic CCU as JSON",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dersimn/hmGetInfo.git"
  },
  "author": "Simon Christmann <simon@christmann.email>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dersimn/hmGetInfo/issues"
  },
  "homepage": "https://github.com/dersimn/hmGetInfo#readme",
  "dependencies": {
    "cli-progress": "^2.1.1",
    "homematic-xmlrpc": "^1.0.2",
    "jsonfile": "^4.0.0",
    "yalm": "^4.1.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "xo": "^0.34.2"
  },
  "xo": {
    "space": 4,
    "rules": {
      "unicorn/prevent-abbreviations": [
        "warn",
        {
          "whitelist": {
            "pkg": true,
            "tmp": true,
            "obj": true,
            "param": true
          }
        }
      ],
      "no-await-in-loop": "off"
    }
  }
}
